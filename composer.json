{
  "name": "aroadahead/athena-sodium",
  "description": "athena sodium auth module",
  "minimum-stability": "dev",
  "license": "BSD-3-Clause",
  "version": "0.0.1",
  "authors": [
    {
      "name": "yonatonreid",
      "email": "me@aroadahead.com",
      "homepage": "https://aroadahead.com/me"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laminas": {
      "module": "AthenaSodium"
    }
  },
  "require": {
    "aroadahead/athena-dependencies": "dev-main",
    "yonatonreid/elephantsdk": "dev-main"
  },
  "require-dev": {
    "doctrine/coding-standard": "^9.0.0",
    "phpstan/phpstan": "^1.2.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^9.5.10",
    "squizlabs/php_codesniffer": "^3.6.1",
    "vimeo/psalm": "^4.13.0"
  },
  "autoload": {
    "psr-4": {
      "AthenaSodium\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AthenaSodiumTest\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@phpstan",
      "@psalm",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "phpstan": "phpstan analyse",
    "psalm": "psalm --stats",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover=coverage.xml"
  }
}